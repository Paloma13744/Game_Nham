<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/jog1_pieces_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/border"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/p1"
            android:contentDescription="Peça pequena jogador 1"/>


        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/m1"
            android:layout_marginStart="16dp"
            android:contentDescription="Peça media jogador 1"/>


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/g1"
            android:layout_marginStart="16dp"
            android:contentDescription="Peça grande jog 1"/>
    </LinearLayout>

    <!-- Tabuleiro central -->
    <GridLayout
        android:id="@+id/gridLayoutTabuleiro"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/jog1_pieces_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/jogo">

        <!-- Célula (0,0) -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:contentDescription="" />

        <!-- Célula (0,1) -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:contentDescription="" />

        <!-- Célula (0,2) -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:contentDescription="" />

        <!-- Célula (1,0) -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:contentDescription="" />

        <!-- Célula (1,1) -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:contentDescription="" />

        <!-- Célula (1,2) -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:contentDescription="" />

        <!-- Célula (2,0) -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:contentDescription="" />

        <!-- Célula (2,1) -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:contentDescription="" />

        <!-- Célula (2,2) -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:contentDescription="" />




    </GridLayout>

    <!-- LinearLayout com peças do jogador 2 na parte inferior -->
    <LinearLayout
        app:layout_goneMarginTop="50dp"
        android:id="@+id/jog2_pieces_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/gridLayoutTabuleiro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/border2">


        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/p2"
            android:contentDescription="Peça pequena jog2"/>


        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/m2"
            android:layout_marginStart="16dp"
            android:contentDescription="Peça média jog2"/>

        <!-- Peça grande jog 2 -->
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/g2"
            android:layout_marginStart="16dp"
            android:contentDescription="Peça grande jog2"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>